extends  ../_skeleton

//- Includes
include ../elements/_ui-list-inline-icon
include ../elements/_ui-shop-grid

block variables
  - var activeIndex = 0
  - var footerLink = true
  - var pageName = 'Home Business'

block page
  // Page Header
  include ../sections/_header-creative

  include ../sections/_section-slider-default

  section.section-lg.bg-white.text-center
    .shell
      h4 Furniture on Fire - Hot Sales!
      .range.range-xs-center.range-70
        .cell-sm-6.cell-lg-3
          +shop-grid({
            href: 'single-product.html',
            img: 'garda-square-sideboard-for-living-and-dining-room-by-dallagnese-300x300',
            icon_class1: 'linear-icon-heart',
            icon_class2: 'linear-icon-balance',

            class_label: 'featured',
            label_text: 'Featured',

            tag_list_class: 'product-categories',
            tag_list_items: ['Living Room', 'Dining room', 'Office', 'Bedroom'],

            title: 'Garda square sideboard for living room',
            prices: ['48'],

            button_class: 'button-gray-base',
            button_icon_class: 'linear-icon-cart',
            button_text: 'Add to cart',

            rating_list: true
          })

        .cell-sm-6.cell-lg-3
          +shop-grid({
            href: 'single-product.html',
            img: 'emma-chairs-and-table-for-kitchen-300x300',
            icon_class1: 'linear-icon-heart',
            icon_class2: 'linear-icon-balance',

            class_label: 'new',
            label_text: 'New',

            tag_list_class: 'product-categories',
            tag_list_items: ['Living Room', 'Dining room', 'Office', 'Bedroom'],

            title: 'Italian emma chairs and table wooden for kitchen',
            prices: ['69'],

            button_class: 'button-gray-base',
            button_icon_class: 'linear-icon-cart',
            button_text: 'Add to cart'
          })
          
        .cell-sm-6.cell-lg-3
          +shop-grid({
            href: 'single-product.html',
            img: 'italian-furniture-contemporary-allumen-fixed-or-extendable-glass-top-table-by-sedit-2-300x300',
            icon_class1: 'linear-icon-heart',
            icon_class2: 'linear-icon-balance',

            class_label: 'sale',
            label_text: 'Sale',

            tag_list_class: 'product-categories',
            tag_list_items: ['Living Room', 'Dining room', 'Office', 'Bedroom'],

            title: 'Italian furniture contemporary allumen fixed',

            price_class: 'sale-price',
            prices: ['45', '56'],

            button_class: 'button-gray-base',
            button_icon_class: 'linear-icon-cart',
            button_text: 'Add to cart',

            rating_list: true
          })

        // 2 row
        .cell-sm-6.cell-lg-3
          +shop-grid({
            href: 'single-product.html',
            img: 'italian-furniture-contemporary-mix-steel-base-wooden-table-top-dining-table-by-sedit-2-300x300',
            icon_class1: 'linear-icon-heart',
            icon_class2: 'linear-icon-balance',

            tag_list_class: 'product-categories',
            tag_list_items: ['Living Room', 'Dining room', 'Office', 'Bedroom'],

            title: 'Italian furniture contemporary mix steel base WOODEN SET',
            prices: ['87'],

            button_class: 'button-gray-base',
            button_icon_class: 'linear-icon-cart',
            button_text: 'Add to cart'
          })

        .cell-sm-6.cell-lg-3
          +shop-grid({
            href: 'single-product.html',
            img: 'modern-small-cucciolo-2-seater-sofa-domingo-salotti-1-300x300',
            icon_class1: 'linear-icon-heart',
            icon_class2: 'linear-icon-balance',

            tag_list_class: 'product-categories',
            tag_list_items: ['Living Room', 'Dining room', 'Office', 'Bedroom'],

            title: 'Modern small cucciolo 2 seater sofa domingo salotti',
            prices: ['16'],

            button_class: 'button-gray-base',
            button_icon_class: 'linear-icon-cart',
            button_text: 'Add to cart'
          })

        .cell-sm-6.cell-lg-3
          +shop-grid({
            href: 'single-product.html',
            img: 'my-italian-living-contemporary-manila-leather-blue-dining-chair-by-imperial-line-300x300',
            icon_class1: 'linear-icon-heart',
            icon_class2: 'linear-icon-balance',

            tag_list_class: 'product-categories',
            tag_list_items: ['Living Room', 'Dining room', 'Office', 'Bedroom'],

            title: 'My italian living contemporary manila leather BLUE CHAIR',
            prices: ['44'],

            button_class: 'button-gray-base',
            button_icon_class: 'linear-icon-cart',
            button_text: 'Add to cart',
            rating_list: true
          })

        // 3 row
        .cell-sm-6.cell-lg-3
          +shop-grid({
            href: 'single-product.html',
            img: 'Porta-venezia-kitchen-bar-dining-stool-by-infiniti-design-300x300',
            icon_class1: 'linear-icon-heart',
            icon_class2: 'linear-icon-balance',

            tag_list_class: 'product-categories',
            tag_list_items: ['Living Room', 'Dining room', 'Office', 'Bedroom'],

            title: 'Porta venezia kitchen bar dining stool by infiniti design',
            prices: ['82'],

            button_class: 'button-gray-light-outline',
            button_icon_class: 'linear-icon-magic-wand',
            button_text: 'Select options'
          })

        .cell-sm-6.cell-lg-3
          +shop-grid({
            href: 'single-product.html',
            img: 'santarossa_plastic_transparent_glossy_chair-1-300x300',
            icon_class1: 'linear-icon-heart',
            icon_class2: 'linear-icon-balance',

            tag_list_class: 'product-categories',
            tag_list_items: ['Living Room', 'Dining room', 'Office', 'Bedroom'],

            title: 'Santarossa plastic transparent glossy chair',
            prices: ['40'],

            button_class: 'button-gray-light-outline',
            button_icon_class: 'linear-icon-magic-wand',
            button_text: 'Select options'
          })
       
  +divider
  
  section.section-lg.bg-white
    .shell
      .range.range-60.range-sm-center
        .cell-sm-6.cell-md-4
          // Blurb circle
          article.blurb.blurb-circle.blurb-circle_centered
            .blurb-circle__icon: span.icon.linear-icon-clock3
            p.blurb__title 365-Day Home Trial
            p Our unique return policy will allow you to return furniture for almost a year

        .cell-sm-6.cell-md-4
          // Blurb circle
          article.blurb.blurb-circle.blurb-circle_centered
            .blurb-circle__icon: span.icon.linear-icon-truck
            p.blurb__title Free Shipping and Delivery
            p We're one of the few furniture online retailers, who offer delivery free of charge

        .cell-sm-6.cell-md-4
          // Blurb circle
          article.blurb.blurb-circle.blurb-circle_centered
            .blurb-circle__icon: span.icon.linear-icon-medal-empty
            p.blurb__title Lifetime Warranty
            p Purchasing furniture with us comes with longer warranty than anyone else offers!
  ='\n'

  // Page Footer
  include ../sections/_footer-corporate

block modals 
  include ../includes/_modal-login
  include ../includes/_modal-register