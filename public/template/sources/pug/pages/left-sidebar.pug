extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs
include ../elements/_ui-tag-list
include ../elements/_ui-list-inline-icon
include ../elements/_ui-slider-blog
include ../elements/_ui-pagination-classic

block variables
  - var activeIndex = 3
  - var pageName = 'Left Sidebar'

block page
  // Page header
  include ../sections/_header-inverse

  +breadcrumbs({
      path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })

  section.bg-white.section-md
    .shell
      .range.range-md-reverse.range-70
        .cell-md-7.cell-lg-8.section-divided__main.section-divided__main-left
          include ../sections/_section-classic-blog-main

        .cell-md-5.cell-lg-4.section-divided__aside.section__aside-left
          include ../sections/_section-aside-sidebar-blog

  // Modal
  include ../sections/_section-modal
  // Page Footer
  include ../sections/_footer-corporate
