extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs
include ../elements/_ui-tag-list
include ../elements/_ui-list-inline-icon
  
block variables
  - var activeIndex = 3
  - var pageName = 'Link post'

block page
  // Page header
  include ../sections/_header-inverse

  +breadcrumbs({
      path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })

  section.bg-white.section-md
    .shell
      .range.range-60.range-xs-center
        .cell-md-8.section-divided__main
          section.section-sm.post-single-body
            h3 BUY SMART: HOW TO BUY A DURABLE RECLINER CHAIR
            .post-meta
              .group
                a(href=blogPostLink): time(datetime='2017') Jan.20, 2016
                a(href=blogPostLink) by Brian Williamson
                a(href=blogPostLink) 3 comment(s)
                a(href=blogPostLink) Kids Room
                +tag-list({
                    list_class: 'list-inline-tag',
                    href: blogPostLink,
                    items: [
                      "Armchair",
                      'Chair']
                })
                
            .post-link
              .post-classic-title
                h4: span FURNITURE STYLES PROFILE: ART DECO
              a(href='http://templatemonster.com/') http://templatemonster.com/
            
            include ../sections/_section-post-single-content

          include ../sections/_section-blog-post-comment

        .cell-md-4.section-divided__aside.section-divided__aside-left
          include ../sections/_section-aside-sidebar-post
            

  // Page Footer
  include ../sections/_footer-corporate

