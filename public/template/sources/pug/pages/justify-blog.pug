extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs
include ../elements/_ui-tag-list
include ../elements/_ui-list-inline-icon
include ../elements/_ui-slider-blog
include ../elements/_ui-pagination-classic

block variables
  - var activeIndex = 3
  - var pageName = 'Justify Blog'

block page
  // Page header
  include ../sections/_header-inverse

  +breadcrumbs({
    path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })

  section.bg-white.section-md
    .shell
      .range.range-60
        .cell-sm-6.cell-md-4
          // Post classic
          article.post-classic.post-minimal
            +jpg('post-minimal-1-418x315')

            .post-classic-title
              h5: a(href=postImage) FURNITURE STYLES PROFILE: ART DECO

            .post-meta
              .group
                a(href=postImage): time(datetime='2017') Jan.20, 2016
                a(href=postImage).meta-author by Brian Williamson

        .cell-sm-6.cell-md-8
          // Post slider
          article.post-slider.post-minimal

            +slider-blog({
              class: 'carousel-blog-post-minimal carousel-blog-justify ',
              items: [
                {
                  original_img: 'gallery-post-01-original-1200x800',
                  img_thumb: 'blog-slider-justify-1-886x320'
                },
                {
                  original_img: 'gallery-post-02-original-1200x800',
                  img_thumb: 'blog-slider-justify-2-886x320'
                },
                {
                  original_img: 'gallery-post-03-original-1200x800',
                  img_thumb: 'blog-slider-justify-3-886x320'
                }
              ]
            })

            .post-classic-title
              h5: a(href=postSlider) BUY SMART: HOW TO BUY A DURABLE RECLINER CHAIR

            .post-meta
              .group
                a(href=postSlider): time(datetime='2017') Jan.20, 2016
                a(href=postSlider).meta-author by Brian Williamson

        .cell-sm-6.cell-md-7.cell-lg-8
          // Post video
          article.post-video.post-minimal.post-video-wrap

            .entry-video.embed-responsive.embed-responsive-16by9
              iframe(width='886', height='320', src=videoSrc, allowfullscreen='')

            .post-classic-title
              h5: a(href=postVideo) NOT ENOUGH CLOSET SPACE? CLOTHES RACKS TO THE RESCUE

            .post-meta
              .group
                a(href=postVideo): time(datetime='2017') Jan.20, 2016
                a(href=postVideo).meta-author by Brian Williamson

        .cell-sm-6.cell-md-5.cell-lg-4
          // Post classic
          article.post-classic.post-minimal
            +jpg('post-classic-1-886x668')

            .post-classic-title
              h5: a(href=postImage) HOW LAIDBACK AN OFFICE CHAIR SHOULD BE?

            .post-meta
              .group
                a(href=postImage): time(datetime='2017') Jan.20, 2016
                a(href=postImage).meta-author by Brian Williamson

        .cell-sm-6.cell-lg-4
          // Post Link
          article.post-link
            .post-classic-title
              h5: a(href=blogPostLink) FURNITURE STYLES PROFILE: ART DECO
            a(href="http://templatemonster.com/") http://templatemonster.com/

        .cell-sm-6.cell-lg-4
          // Post quote
          article.post-quote.post-minimal
            // Quote default
            a(href=postQuote).quote-default
              +quote-mark('quote-default__mark')
              .quote-default__text: p.q.heading-4 Getting to another  level of design and functionality.
              p.quote-default__cite Adam Smith

        .cell-sm-6.cell-lg-4
          // Post standard
          article.post-classic.post-minimal
            .post-classic-title
              h5: a(href=postLink) THE INTERSECTION OF LEFTOVERS AND HAND-CRAFTED FURNITURE

            .post-meta
              .group
                a(href=postLink): time(datetime='2017') Jan.20, 2016
                a(href=postLink).meta-author by Brian Williamson

            .post-classic-body
              p Also new: wall-saver recliners, which will need only about six inches of space between chair and wall, compared to a foot or more needed for larger traditional versions (though the price is about the same).

        .cell-sm-6.cell-lg-4
          // Post classic
          article.post-minimal

            +jpg('post-minimal-4-418x315')
            .post-classic-title
              h5: a(href=postImage) ECO-FRIENDLY FURNITURE?

            .post-meta
              .group-xs
                a(href=postImage): time(datetime='2017') Jan.20, 2016
                a(href=postImage).meta-author by Brian Williamson
                a(href=postImage) 3 comment(s)
                a(href=postImage) Bedroom
                +tag-list({
                  list_class: 'list-inline-tag',
                  href: postImage,
                  items: [
                    "Armchair",
                    'Table',
                    'Chair']
                })

            .post-minimal-footer
              +list-inline-icon({
                list_class: 'list-inline-sm',
                items: [
                  "icon-xxs fa-facebook",
                  'icon-xxs fa-twitter',
                  'icon-xxs fa-google-plus',
                  'icon-xxs fa-vimeo',
                  'icon-xxs fa-youtube',
                  'icon-xxs fa-pinterest-p']
              })

              a(href=postImage).button.button-link View now!

        .cell-sm-6.cell-lg-8
          // Post audio
          article.post-audio.post-minimal

            // RD Audio
            .rd-audio-wrap.rd-audio-dark.rd-audio-horizontal
              .rd-audio(data-rd-audio-playlist-name='rd-playlist01', data-rd-volume-bar-type='horizontal')
                .rd-audio-controls.text-center
                  .rd-audio-controls-left
                    // Play\Pause button
                    a.rd-audio-play-pause.fa.fa-play.rd-audio-icon.has-controls(href='#')
                  .rd-audio-progress-bar-wrap
                    // Time
                    .rd-audio-time
                      // currentTime
                      span.rd-audio-current-time 00:00
                    // Progress bar
                    .rd-audio-progress-bar
                  // Volume button
                  a.rd-audio-volume.fa.fa-volume-up.rd-audio-icon(href='#')
                  // Volume bar
                  .rd-audio-volume-bar
                  .rd-audio-controls-righ.veil
                    // Playlist button
                    a.rd-audio-playlist-button.rd-audio-icon.mdi.mdi-dots-horizontal(href='#')
                .rd-audio-playlist-wrap
                  h6.rd-audio-playlist-title Playlist
                  ul.rd-audio-playlist(data-rd-audio-playlist='rd-playlist01', data-rd-audio-play-on='li')
                    li(data-rd-audio-src='audio/sound.mp3')


            .post-classic-title
              h5: a(href=postAudio) INTERESTING DESIGN FOR A DUAL-ACTION DESK DRAWER

            .post-minimal-footer
              .post-meta
                .group
                  a(href=postAudio): time(datetime='2017') Jan.20, 2016
                  a(href=postAudio).meta-author by Brian Williamson

  +divider
  section.section-sm.text-center
    .shell
      +pagination-classic(1,
      [{"href": "#"}, {"href": "#"}, {"href": "#"}, {"href": "#"}],
      null,
      {"title": "", "href": "#"}
      )


  // Page Footer
  include ../sections/_footer-corporate

